<launch>
  <!-- export ROS_NAMESPACE="basler_camera"; rosrun camera_aravis camnode  -->
  <!-- start camera node -->
  <node pkg="camera_aravis" type="camnode" name="basler_camera" output="screen" ns="basler_camera" />

