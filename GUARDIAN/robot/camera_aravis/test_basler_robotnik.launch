  <!-- start dynamic reconfigure to tune camnode parameters manually -->
  <!-- node pkg="dynamic_reconfigure" type="reconfigure_gui" name="reconfigure_gui" output="screen" / --> 

  <!-- start image view -->
  <!-- second parameter indicates image transport is theora -->
  <!-- node pkg="image_view" type="image_view" args="image:=/basler_camera/image_raw image_transport:=theora autosize:=true" name="image_view_node" output="screen"/ -->
  <node pkg="image_view" type="image_view" args="image:=/basler_camera/image_raw image_transport:=raw autosize:=true" name="image_view_node" output="screen"/>
</launch>

